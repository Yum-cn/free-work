<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.anhuay.strategy.dao.SoftDistributeDao">

	<select id="get" resultType="com.anhuay.strategy.domain.SoftDistributeDO">
		select `id`,`templet_id`,`device_control_status`,`device_control_rules`,`download_retry_status`,`max_retry_status`,`retry_interval`,`soft_ids`,`status`,`create_time`,`update_time` from ahy_soft_distribute where id = #{value}
	</select>

	<select id="list" resultType="com.anhuay.strategy.domain.SoftDistributeDO">
		select `id`,`templet_id`,`device_control_status`,`device_control_rules`,`download_retry_status`,`max_retry_status`,`retry_interval`,`soft_ids`,`status`,`create_time`,`update_time` from ahy_soft_distribute
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="templetId != null and templetId != ''"> and templet_id = #{templetId} </if>
		  		  <if test="deviceControlStatus != null and deviceControlStatus != ''"> and device_control_status = #{deviceControlStatus} </if>
		  		  <if test="deviceControlRules != null and deviceControlRules != ''"> and device_control_rules = #{deviceControlRules} </if>
		  		  <if test="downloadRetryStatus != null and downloadRetryStatus != ''"> and download_retry_status = #{downloadRetryStatus} </if>
		  		  <if test="maxRetryStatus != null and maxRetryStatus != ''"> and max_retry_status = #{maxRetryStatus} </if>
		  		  <if test="retryInterval != null and retryInterval != ''"> and retry_interval = #{retryInterval} </if>
		  		  <if test="softIds != null and softIds != ''"> and soft_ids = #{softIds} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  and status = 1
		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from ahy_soft_distribute
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="templetId != null and templetId != ''"> and templet_id = #{templetId} </if>
		  		  <if test="deviceControlStatus != null and deviceControlStatus != ''"> and device_control_status = #{deviceControlStatus} </if>
		  		  <if test="deviceControlRules != null and deviceControlRules != ''"> and device_control_rules = #{deviceControlRules} </if>
		  		  <if test="downloadRetryStatus != null and downloadRetryStatus != ''"> and download_retry_status = #{downloadRetryStatus} </if>
		  		  <if test="maxRetryStatus != null and maxRetryStatus != ''"> and max_retry_status = #{maxRetryStatus} </if>
		  		  <if test="retryInterval != null and retryInterval != ''"> and retry_interval = #{retryInterval} </if>
		  		  <if test="softIds != null and softIds != ''"> and soft_ids = #{softIds} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.anhuay.strategy.domain.SoftDistributeDO">
		insert into ahy_soft_distribute
		(
			`id`, 
			`templet_id`, 
			`device_control_status`, 
			`device_control_rules`, 
			`download_retry_status`, 
			`max_retry_status`, 
			`retry_interval`, 
			`soft_ids`, 
			`status`, 
			`create_time`, 
			`update_time`
		)
		values
		(
			#{id}, 
			#{templetId}, 
			#{deviceControlStatus}, 
			#{deviceControlRules}, 
			#{downloadRetryStatus}, 
			#{maxRetryStatus}, 
			#{retryInterval}, 
			#{softIds}, 
			#{status}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.anhuay.strategy.domain.SoftDistributeDO">
		update ahy_soft_distribute 
		<set>
			<if test="templetId != null">`templet_id` = #{templetId}, </if>
			<if test="deviceControlStatus != null">`device_control_status` = #{deviceControlStatus}, </if>
			<if test="deviceControlRules != null">`device_control_rules` = #{deviceControlRules}, </if>
			<if test="downloadRetryStatus != null">`download_retry_status` = #{downloadRetryStatus}, </if>
			<if test="maxRetryStatus != null">`max_retry_status` = #{maxRetryStatus}, </if>
			<if test="retryInterval != null">`retry_interval` = #{retryInterval}, </if>
			<if test="softIds != null">`soft_ids` = #{softIds}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<update id="updateStatus">
        update ahy_soft_distribute set status = 0 where id = #{value}
    </update>

    <update id="batchUpdateStatus">
        update ahy_soft_distribute set status = 0 where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
	
	<delete id="remove">
		delete from ahy_soft_distribute where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from ahy_soft_distribute where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>